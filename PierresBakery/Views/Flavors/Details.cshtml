@{
  Layout = "_Layout";
}

@model PierresBakery.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.Label("Flavor Type"): @Html.DisplayFor(model => model.FlavorName)</h3>

@if(@Model.JoinEntries.Count == 0)
{
  <p>We have no treats for sale with this flavor! Try back later :[</p>
}
else
{
  <h4>Treats that contain this flavor:</h4>
  <ul>
  @foreach(var join in Model.JoinEntries)
  {
    <li>@join.Treat.TreatName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to Flavor", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

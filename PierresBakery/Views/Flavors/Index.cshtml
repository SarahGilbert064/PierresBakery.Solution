@{
  Layout = "_Layout";
}

@using PierresBakery.Models;
@model IEnumerable<PierresBakery.Models.Flavor>;

<h3>Flavors for @User.Identity.Name</h3>
<br>
@if (@Model.Any())
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <h4><li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li></h4>
    }
  </ul>
} 
else
{
  <h3>No Flavors have been added yet!</h3>
}
<br>
<p>@Html.ActionLink("Add new flavor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
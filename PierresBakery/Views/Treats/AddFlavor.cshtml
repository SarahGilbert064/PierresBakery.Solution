@{
  Layout = "_Layout";
}

@model PierresBakery.Models.Child

<h2>Add a Flavor</h2>

<h4>Add a flavor for this child: @Html.DisplayFor(model => model.ChildName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ChildId)

    @Html.Label("Select a flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>
@{
  Layout = "_Layout";
}

@using Template.Models;
@model List<Template.Models.Child>;

<h1>CHILDS</h1>

@if (@Model.Count == 0)
{
  <h3>No CHILDS have been added yet!</h3>
} 

@foreach (Child child in Model)
{
  <li>@Html.ActionLink($"{child.ChildName}", "Details", new { id = child.ChildId })</li>
}

<p>@Html.ActionLink("Add new child", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>